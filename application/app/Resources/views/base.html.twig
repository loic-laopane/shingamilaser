<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ app_name }}{% endblock %}</title>

        <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
        <meta name="viewport" content="width=device-width" />

        <!-- Bootstrap 3 and paperkit -->
        <link rel="stylesheet" href="{{ asset('dist/bootstrap3/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('dist/font-awesome/css/font-awesome.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('dist/paperkit/css/ct-paper.css') }}" />
        <link rel="stylesheet" href="{{ asset('dist/paperkit/css/demo.css') }}" />


        <link href='http://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
        <link href="https://fonts.googleapis.com/css?family=Racing+Sans+One" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Work+Sans:100,300,400,600" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Oswald:200,300,400,500" rel="stylesheet">


        <link rel="stylesheet" href="{{ asset('styles/css/styles.css') }}" />
        <link rel="stylesheet" href="{{ asset('styles/css/shinigami-theme.css') }}" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/png" href="{{ asset('img/favicon.png') }}" />
    </head>
    <body>


        {% include '::menu.html.twig' %}
        <div class="wrapper">
            {% block jobotron %}{% endblock %}
            <div class="main">
                <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                            {% set errors = app.session.flashbag.all() %}
                            {% for type, messages in errors %}
                                <div class="alert alert-{{ type }}">
                                    {% for message in messages %}
                                        <p>{{ message | trans | capitalize }}</p>
                                    {% endfor %}
                                </div>
                            {% endfor %}

                            {% block body %}{% endblock %}
                            </div>
                        </div>
                </div>

            </div>

        </div>
        <footer class="footer">
            <div class="container">
                <span class="text-muted">{{ app_name }} - &copy; 2017 - All rights reserved</span>
            </div>
        </footer>

        <!-- Jquery -->
        <script src="{{ asset('dist/paperkit/js/jquery-1.10.2.js') }}" type="text/javascript"></script>
        <script src="{{ asset('dist/paperkit/js/jquery-ui-1.10.4.custom.min.js') }}" type="text/javascript"></script>

        <!-- Bootstrap -->
        <script src="{{ asset('dist/bootstrap3/js/bootstrap.min.js') }}" type="text/javascript"></script>

        <!--  Plugins -->
        {#<script src="{{ asset('dist/paperkit/js/ct-paper-checkbox.js') }}"></script>#}
        <script src="{{ asset('dist/paperkit/js/ct-paper-radio.js') }}"></script>
        <script src="{{ asset('dist/paperkit/js/bootstrap-select.js') }}"></script>
        <script src="{{ asset('dist/paperkit/js/bootstrap-datepicker.js') }}"></script>

        <script src="{{ asset('dist/paperkit/js/ct-paper.js') }}"></script>

        <script src="{{ asset('js/main.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
