{% if customer.cards | length > 0 %}
    <table class="table" id="table_card">
        <thead>
        <tr>
            <th>{{ 'th.card_number' | trans }}</th>
            <th class="hidden-xs">{{ 'th.activated_at' | trans }}</th>
            <th class="hidden-xs">{{ 'th.center' | trans }}</th>
            <th class="hidden-xs">{{ 'th.status' | trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for card in customer.cards %}
            <tr>
                <td><a href="{{ path('account_card_show', { 'numero' : card.numero }) }}">{{ card.numero }}</a></td>
                <td class="hidden-xs">{{ card.activatedAt | date('d/m/Y') }}</td>
                <td class="hidden-xs">{{ card.center.name }}</td>
                <td class="hidden-xs"><i class="fa {{ card.active ? 'fa-check' : 'fa-close'}}"></i></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>{{ 'msg.no_card_available' | trans }}</p>
{% endif %}