{% extends "AppBundle:Admin:layout.html.twig" %}

{% block title %}AppBundle:User:list{% endblock %}

{% block content %}
<h1>Users list</h1>
<div class="panel">
    <div class="panel-body">
        <p><a class="btn btn-success btn-fill" href="{{ path('admin_user_create') }}"><i class="fa fa-plus"></i> {{ 'btn.create' | trans }}</a></p>
        {% if users | length > 0 %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path('admin_user_edit', { id : user.id }) }}">{{ user.username }}</a></td>
                            <td>{{ user.email }}</td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                        Actions
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">

                                        <li role="presentation"><a role="menuitem" tabindex="-1" href="{{ path('admin_user_edit', { 'id' : user.id }) }}"><i class="fa fa-edit"></i> {{ 'btn.edit' | trans }}</a></li>

                                        {#<li role="presentation"><a role="menuitem" tabindex="-1" class="btn-confirm" href="{{ path('admin_user_delete', { 'id' : user.id }) }}"><i class="fa fa-trash"></i> {{ 'btn.delete' }}</a></li>#}

                                    </ul>

                                </div>
                            </td>
                        </tr>
                    {% endfor  %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">
                            {% include '::pagination.html.twig' %}
                        </td>
                    </tr>
                </tfoot>
            </table>
        {% endif %}

    </div>
</div>
{% endblock %}
