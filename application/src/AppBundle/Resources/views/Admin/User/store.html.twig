{% extends "AppBundle:Admin:layout.html.twig" %}

{% block title %}{% if user is defined %}{{ 'title.user.edit' | trans({'%username%' : user.username}) }}{% else %}{{ 'title.user.new' | trans }}{% endif %}{% endblock %}

{% block content %}
<h1>{% if user is defined %}{{ 'title.user.edit' | trans({'%username%' : user.username}) }}{% else %}{{ 'title.user.new' | trans }}{% endif %}</h1>
<div class="panel panel-dark">
        <div class="panel-body">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary btn-fill" type="submit"><i class="fa fa-save"></i> {{ 'btn.save' | trans }}</button>
        <a class="btn btn-default btn-fill" href="{{ path('admin_user_list') }}"><i class="fa fa-arrow-left"></i> {{ 'btn.back' | trans }}</a>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
