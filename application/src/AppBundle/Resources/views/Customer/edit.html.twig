{% extends '::base.html.twig' %}

{% block title %}{{ 'title.customer.edit' | trans({'%nickname%': customer.nickname}) }} :: {{ parent() }}{% endblock %}

{% block body %}
    <h1>{{ 'title.customer.edit' | trans({'%nickname%': customer.nickname}) }}</h1>
    <div class="panel panel-dark">
    <div class="panel-body">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary btn-fill"><i class="fa fa-save"></i> {{ 'btn.save' | trans }}</button>
    <a class="btn btn-default btn-fill" href="{{ path('staff_customer_search') }}"><i class="fa fa-arrow-left"></i> {{ 'btn.return' | trans }}</a>
    {{ form_end(form) }}
    </div>
    </div>
{% endblock %}