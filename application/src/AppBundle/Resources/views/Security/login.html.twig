{% extends "::base.html.twig" %}

{% block title %}{{ 'Signin' | trans }} :: {{ parent() }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="my-panel">
            <div class="heading">{{ 'heading.signin' | trans | title }}</div>
            <div class="body">
                {% if errors_login %}
                    <div class="alert alert-danger">{{ errors_login.messageKey|trans(errors_login.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path('login') }}" method="post">
                    <section>
                    <label for="username">{{ 'label.username' | trans | capitalize  }} :</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" />

                    <label for="password">{{ 'label.password' | trans | capitalize  }} :</label>
                    <input type="password" id="password" name="_password" class="form-control" />

                     <p><i class="fa fa-question-circle"></i> <a href="{{ path('forgotten_password') }}">{{ 'link.forgotten_password' | trans | capitalize }}</a></p>

                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}
                    </section>
                    <section>
                        <button type="submit" class="btn btn-primary btn-fill"><i class="fa fa-sign-in"></i> {{ 'btn.login' | trans }}</button>
                    </section>
                </form>
            </div>
        </div>
    </div>
</div>




{% endblock %}
